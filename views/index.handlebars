<div class="container">
    <div class="content">
        <h1><i class="fas fa-scroll"></i> Write Task to be Completed</h1>



        <form class="create-form">
            <div class="form-group">
                <label for="newTask">Create new Task</label>
                <input type="text" id="newTask" name="task">

                <button type="submit" class="submit" id="add-task">Submit</button>

            </div>
        </form>


    </div>
    <div class="row">
        <div class="col-sm-6">
            <h4 class="mini-heading">Tasks to be Completed:</h4>
            <div class="task-container">

            <ul>
                {{#each tasks}}
                    {{#unless completed}}
                        <div class="row">
                            <div class="text-row">
                                <button type="button" class="complete-task" id="complete" data-id="{{this.id}}"
                                data-newCompleted="{{complete}}"><i class="fas fa-check-square"></i></button>
                                <span class="text-span">{{this.id}} - {{this.task}}</span>
                            </div>
                        </div>
                    {{/unless}}
                {{/each}}
            </ul>

            </div>
        </div>

        <div class="col-sm-6">
            <h4 class="mini-heading">Completed Tasks to be Forgotten:</h4>
            <div class="complete-container">

            <ul>
                {{#each tasks}}
                    {{#if completed}}
                        <div class="row">
                            <div class="text-row">
                                <button type="button" class="forget-task" id="forget" data-id="{{this.id}}"
                                data-newCompleted="{{complete}}"><i class="fas fa-trash-alt"></i></button>
                                <span class="text-span">{{this.id}} - {{this.task}}</span>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </ul>

            </div>
        </div>


    </div>
</div>
